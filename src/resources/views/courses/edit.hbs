<div class="mt-4">
  <h3>Update course</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter course name"
        value="{{course.name}}">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" name="description"
        placeholder="Enter course description">{{course.description}}</textarea>

    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Enter videoId"
        value="{{course.videoId}}">
    </div>
    <div class="form-group">
      <label for="level">Level</label>
      <input type="text" class="form-control" id="level" name="level" placeholder="Enter course level"
        value="{{course.level}}">
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>